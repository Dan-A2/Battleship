<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.view.boardVerification.BoardCheckView">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true">
         <image>
            <Image url="@../../images/background.jpg" />
         </image>
      </ImageView>
      <Pane fx:id="boardPane" layoutX="76.0" layoutY="150.0" prefHeight="300.0" prefWidth="300.0" />
      <Label fx:id="timeLabel" alignment="CENTER" layoutX="644.0" layoutY="278.0" prefHeight="43.0" prefWidth="46.0" style="-fx-background-color: BLACK;" text="0" textFill="#09ff00">
         <font>
            <Font name="Algerian" size="26.0" />
         </font>
      </Label>
      <Button fx:id="regenerateBtn" layoutX="174.0" layoutY="494.0" mnemonicParsing="false" onAction="#regenerate" style="-fx-background-color: #000080;" text="Regenerate" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="17.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="startGameBtn" layoutX="534.0" layoutY="494.0" mnemonicParsing="false" onAction="#startGame" style="-fx-background-color: #000080;" text="Let's go" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="17.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label fx:id="infoLabel" alignment="CENTER" prefHeight="84.0" prefWidth="800.0" text="Choose your Board" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="29.0" />
         </font>
      </Label>
      <Label layoutX="150.0" layoutY="108.0" text="attempts left:" textFill="WHITE">
         <font>
            <Font name="Calibri" size="23.0" />
         </font>
      </Label>
      <Label fx:id="leftAttemptsLabel" alignment="CENTER" layoutX="301.0" layoutY="100.0" prefHeight="43.0" prefWidth="46.0" text="0" textFill="RED">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
